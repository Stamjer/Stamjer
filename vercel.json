{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/cron-daily", "destination": "/api/cron-daily" },
    { "source": "/api/:path*", "destination": "/api/index" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/cron-daily",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/cron-notifications",
      "schedule": "10 5 * * *"
    }
  ]
}
